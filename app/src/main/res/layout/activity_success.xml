<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/success_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#121212"
    tools:context=".SuccessActivity">

    <!-- Contenedor superior -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="24dp"
        android:background="#1A1A1A"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:contentDescription="Foto de perfil"
            android:scaleType="centerCrop"
            android:background="@drawable/rounded_corner"
            android:padding="4dp"
            android:layout_marginEnd="18dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/success_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bienvenido, Usuario ðŸ‘‹"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="usuario@example.com"
                android:textSize="15sp"
                android:textColor="#BBBBBB" />
        </LinearLayout>
    </LinearLayout>

    <!-- MenÃº de opciones -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Cada item es visualmente igual para consistencia -->
        <TextView
            android:id="@+id/menu_profile"
            style="@style/MenuItemStyle"
            android:text="Ver perfil" />

        <TextView
            android:id="@+id/menu_account"
            style="@style/MenuItemStyle"
            android:text="Cuenta" />

        <TextView
            android:id="@+id/menu_settings"
            style="@style/MenuItemStyle"
            android:text="ConfiguraciÃ³n" />

        <TextView
            android:id="@+id/menu_home"
            style="@style/MenuItemStyle"
            android:text="Ir a inicio" />

        <TextView
            android:id="@+id/menu_notifications"
            style="@style/MenuItemStyle"
            android:text="Notificaciones" />

        <TextView
            android:id="@+id/menu_security"
            style="@style/MenuItemStyle"
            android:text="Seguridad" />
    </LinearLayout>

    <!-- BotÃ³n salir -->
    <Button
        android:id="@+id/logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="#1A1A1A"
        android:padding="14dp"
        android:layout_marginTop="20dp" />

</LinearLayout>